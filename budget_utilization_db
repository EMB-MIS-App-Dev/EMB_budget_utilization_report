DELETE FROM main_pap;
DELETE FROM sub_pap;
DELETE FROM allotment;
DELETE FROM class;
DELETE FROM saa;

CREATE TABLE main_pap (
    mp_id INTEGER(20) AUTO_INCREMENT NOT NULL,
    mp_code VARCHAR(200),
    mp_name VARCHAR(200),
    mp_description VARCHAR(200),
    mp_remarks VARCHAR(200),
    PRIMARY KEY (mp_id)
);

CREATE TABLE sub_pap (
    sp_id INTEGER(20) AUTO_INCREMENT NOT NULL,
    sp_code VARCHAR(200),
    sp_name VARCHAR(200),
    sp_description VARCHAR(200),
    sp_remarks VARCHAR(200),
    sp_mp_id INTEGER(20),
    PRIMARY KEY (sp_id),
    FOREIGN KEY (sp_mp_id) REFERENCES main_pap(mp_id)
);

CREATE TABLE allotment (
    id INTEGER(20) AUTO_INCREMENT NOT NULL,
    region VARCHAR(200),
    year VARCHAR(200),
    remarks VARCHAR(200),
    status VARCHAR(200),
    PRIMARY KEY (id)
);

CREATE TABLE class (
    cl_id INTEGER(20) AUTO_INCREMENT NOT NULL,
    cl_name VARCHAR(200),
    cl_amount VARCHAR(200),
    cl_remarks VARCHAR(200),
    cl_sp_id INTEGER(20),
    cl_allotment_id INTEGER(20),
    PRIMARY KEY (cl_id),
    FOREIGN KEY (cl_sp_id) REFERENCES sub_pap(sp_id),
    FOREIGN KEY (cl_allotment_id) REFERENCES allotment(id)
);

CREATE TABLE saa (
    sa_id INTEGER(20) AUTO_INCREMENT NOT NULL,
    sa_name VARCHAR(200),
    sa_description VARCHAR(200),
    sa_month VARCHAR(200),
    sa_amount VARCHAR(200),
    sa_remarks VARCHAR(200),
    sa_cl_id INTEGER(20),
    sa_allotment_id INTEGER(20),
    PRIMARY KEY (sa_id),
    FOREIGN KEY (sa_allotment_id) REFERENCES allotment(id)
);