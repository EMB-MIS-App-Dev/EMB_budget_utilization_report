DELETE FROM main_pap;
DELETE FROM sub_pap;
DELETE FROM allotment;

CREATE TABLE main_pap (
    mp_id INTEGER(20) AUTO_INCREMENT NOT NULL,
    mp_code VARCHAR(200),
    mp_name VARCHAR(200),
    mp_description VARCHAR(200),
    mp_remarks VARCHAR(200),
    PRIMARY KEY (mp_id)
);

CREATE TABLE sub_pap (
    sp_id INTEGER(20) AUTO_INCREMENT NOT NULL,
    sp_code VARCHAR(200),
    sp_name VARCHAR(200),
    sp_description VARCHAR(200),
    sp_remarks VARCHAR(200),
    sp_mp_id INTEGER(20),
    PRIMARY KEY (sp_id),
    FOREIGN KEY (sp_mp_id) REFERENCES main_pap(mp_id)
);

CREATE TABLE allotment (
    id INTEGER(20) AUTO_INCREMENT NOT NULL,
    region VARCHAR(200),
    year VARCHAR(200),
    amount VARCHAR(200),
    type VARCHAR(200),
    remarks VARCHAR(200),
    status VARCHAR(200),
    mp_id INTEGER(20),
    sp_id INTEGER(20),
    PRIMARY KEY (id),
    FOREIGN KEY (mp_id) REFERENCES main_pap(mp_id),
    FOREIGN KEY (sp_id) REFERENCES sub_pap(sp_id)
);

CREATE TABLE saa (
    saa_id INTEGER(20) AUTO_INCREMENT NOT NULL,
    saa_name VARCHAR(200),
    saa_description VARCHAR(200),
    saa_month VARCHAR(200),
    saa_aount VARCHAR(200),
    saa_remarks VARCHAR(200),
    saa_sp_id INTEGER(20),
    saa_allotment_id INTEGER(20),
    PRIMARY KEY (saa_id),
    FOREIGN KEY (saa_sp_id) REFERENCES sub_pap(sp_id),
    FOREIGN KEY (saa_allotment_id) REFERENCES allotment(id)
);